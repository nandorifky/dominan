<script>
	const toggleBtn = document.getElementById('pricingToggle');
	const toggleCircle = document.getElementById('toggleCircle');
	const buildPrices = document.querySelectorAll('.price-build');
	const maintainPrices = document.querySelectorAll('.price-maintain');
	const labelBuild = document.getElementById('label-build');
	const labelMaintain = document.getElementById('label-maintain');
	const featBasic = document.getElementById('feat-basic');
	const featPro = document.getElementById('feat-pro');

	let isMaintain = false;

	toggleBtn?.addEventListener('click', () => {
		isMaintain = !isMaintain;
		
		if (isMaintain) {
			toggleCircle?.classList.remove('translate-x-0');
			toggleCircle?.classList.add('translate-x-8');
			toggleBtn?.classList.replace('bg-dom-black', 'bg-gray-600');
			
			labelBuild?.classList.replace('text-dom-black', 'text-gray-400');
			labelMaintain?.classList.replace('text-gray-400', 'text-dom-black');

			if(featBasic) featBasic.innerHTML = '<svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg> Update Security & Plugin';
			if(featPro) featPro.innerHTML = '<svg class="w-5 h-5 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg> Posting 2 Artikel Baru';

		} else {
			toggleCircle?.classList.remove('translate-x-8');
			toggleCircle?.classList.add('translate-x-0');
			toggleBtn?.classList.replace('bg-gray-600', 'bg-dom-black');

			labelBuild?.classList.replace('text-gray-400', 'text-dom-black');
			labelMaintain?.classList.replace('text-dom-black', 'text-gray-400');

			if(featBasic) featBasic.innerHTML = '<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg> Tanpa Artikel Bulanan';
			if(featPro) featPro.innerHTML = '<svg class="w-5 h-5 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg> Bonus 2 Artikel SEO Pilar';
		}

		if(isMaintain) {
			buildPrices.forEach(el => el.classList.add('hidden'));
			maintainPrices.forEach(el => el.classList.remove('hidden'));
		} else {
			maintainPrices.forEach(el => el.classList.add('hidden'));
			buildPrices.forEach(el => el.classList.remove('hidden'));
		}
	});
</script>

