---
import '../styles/global.css';
import '@fontsource/space-grotesk';

const pageData = {
  title: "Dominan Web | Official Links",
  desc: "Pintu masuk menuju layanan digital marketing premium. SEO, Ads, & Website Development.",
  
  links: [
    {
      label: "Chat Tim Support (WhatsApp)",
      sub: "Fast Response 09:00 - 17:00",
      url: "https://wa.me/6281234567890",
      color: "bg-green-500",
      textColor: "text-white",
      highlight: true
    },
    {
      label: "Katalog Layanan Lengkap",
      sub: "SEO, Website, & Ads",
      url: "/services",
      color: "bg-white",
      textColor: "text-black"
    },
    {
      label: "Lihat Hasil Kerja (Portfolio)",
      sub: "Studi Kasus & Data",
      url: "/portfolio",
      color: "bg-white",
      textColor: "text-black"
    },
    {
      label: "Lowongan Karir",
      sub: "Join the winning team",
      url: "/career", // (Bisa diarahkan ke LinkedIn atau halaman karir nanti)
      color: "bg-dom-black",
      textColor: "text-white"
    },
    {
      label: "Website Utama",
      sub: "dominan.web.id",
      url: "/",
      color: "bg-zinc-200",
      textColor: "text-black"
    }
  ]
};
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{pageData.title}</title>
		<meta name="description" content={pageData.desc} />
	</head>
	<body class="bg-dom-black font-space text-white antialiased min-h-screen flex flex-col items-center justify-center p-4 relative overflow-hidden">
		
        {/* Background Grid (Technical Look) */}
        <div class="absolute inset-0 opacity-20 pointer-events-none" 
             style="background-image: linear-gradient(#333 1px, transparent 1px), linear-gradient(90deg, #333 1px, transparent 1px); background-size: 40px 40px;">
        </div>

        {/* Main Card */}
        <div class="w-full max-w-md relative z-10">
            
            {/* COMPANY BRANDING SECTION */}
            <div class="text-center mb-10">
                {/* Logo Box */}
                <div class="w-24 h-24 bg-dom-yellow text-dom-black mx-auto mb-6 flex items-center justify-center border-4 border-white shadow-[0px_0px_20px_rgba(255,255,255,0.2)]">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                </div>
                
                <h1 class="text-3xl font-bold uppercase tracking-widest mb-2">
                    Dominan Web
                </h1>
                <p class="text-gray-400 text-sm font-mono border-t border-gray-700 pt-4 inline-block px-4">
                    EST. 2024 â€¢ JAKARTA, ID
                </p>
            </div>

            {/* LINKS STACK */}
            <div class="space-y-4">
                {pageData.links.map((link) => (
                    <a 
                        href={link.url} 
                        class={`
                            group relative block w-full py-4 px-6 text-left border-2 border-white 
                            hover:translate-x-1 hover:-translate-y-1 transition-all duration-200
                            ${link.color} ${link.textColor}
                            ${link.highlight ? 'shadow-[4px_4px_0px_0px_#FFF]' : 'shadow-[4px_4px_0px_0px_#333]'}
                        `}
                    >
                        <div class="flex justify-between items-center">
                            <div>
                                <span class="block font-bold text-lg uppercase tracking-tight">{link.label}</span>
                                {link.sub && <span class="block text-xs opacity-70 font-mono mt-1">{link.sub}</span>}
                            </div>
                            {/* Arrow Icon */}
                            <svg class="w-5 h-5 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                        </div>
                    </a>
                ))}
            </div>

            {/* SOCIALS & FOOTER */}
            <div class="mt-12 text-center">
                <div class="flex justify-center gap-6 mb-8 text-gray-400">
                    <a href="#" class="hover:text-dom-yellow transition-colors"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg></a>
                    <a href="#" class="hover:text-dom-yellow transition-colors"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.072 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg></a>
                </div>
                <p class="text-xs text-gray-500 font-bold uppercase tracking-widest">
                    &copy; {new Date().getFullYear()} Dominan Web Team
                </p>
            </div>

        </div>
	</body>
</html>