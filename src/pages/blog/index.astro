---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 1. Ambil semua artikel
const posts = await getCollection('posts');

// 2. Urutkan dari yang terbaru
// Perhatikan: Kita akses data.publishedDate
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.publishedDate).valueOf() - new Date(a.data.publishedDate).valueOf()
);

const pageTitle = "Blog & Insight | Dominan Web";
const pageDesc = "Artikel terbaru seputar strategi SEO, Website High Performance, dan Digital Marketing.";
---

<Layout title={pageTitle}>
  
  <Fragment slot="head">
    <meta name="description" content={pageDesc} />
  </Fragment>

  <header class="py-16 md:py-24 border-b-3 border-dom-black bg-zinc-50 relative overflow-hidden">
    <div class="container mx-auto px-6 relative z-10 text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 uppercase leading-tight text-dom-black">
            INSIGHT & <br/>
            <span class="text-white bg-dom-black px-4">STRATEGI</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Pelajari cara mendominasi pasar digital dengan strategi yang terbukti.
        </p>
    </div>
  </header>

  <section class="py-16 bg-white min-h-screen">
    <div class="container mx-auto px-6 max-w-6xl">
        
        {sortedPosts.length === 0 ? (
            <div class="text-center py-20 border-3 border-dashed border-gray-300">
                <p class="text-2xl font-bold text-gray-400">Belum ada artikel yang dipublish.</p>
            </div>
        ) : (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {sortedPosts.map((post) => (
                    <article class="flex flex-col h-full border-3 border-dom-black bg-white shadow-neo hover:shadow-neo-hover hover:-translate-y-1 transition-all duration-200 group">
                        
                        {/* Cover Image */}
                        {/* PENTING: Gunakan post.slug untuk link */}
                        <a href={`/blog/${post.slug}`} class="block overflow-hidden border-b-3 border-dom-black aspect-video bg-gray-200 relative">
                            {post.data.coverImage ? (
                                <img 
                                    src={post.data.coverImage} 
                                    alt={post.data.title} 
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                />
                            ) : (
                                <div class="w-full h-full flex items-center justify-center text-gray-400 font-bold bg-gray-100">
                                    DOMINAN
                                </div>
                            )}
                        </a>

                        {/* Content */}
                        <div class="p-6 flex flex-col flex-grow">
                            <div class="mb-4 flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-gray-500">
                                <span>{new Date(post.data.publishedDate).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                            </div>

                            <h2 class="text-2xl font-bold mb-3 leading-tight uppercase">
                                <a href={`/blog/${post.slug}`} class="hover:text-dom-yellow transition-colors block">
                                    {post.data.title}
                                </a>
                            </h2>

                            <p class="text-gray-600 text-sm mb-6 line-clamp-3 flex-grow">
                                {post.data.excerpt || "Baca strategi selengkapnya..."}
                            </p>

                            <a href={`/blog/${post.slug}`} class="inline-flex items-center gap-2 font-bold uppercase text-sm border-b-2 border-black pb-1 w-max hover:gap-4 transition-all">
                                BACA ARTIKEL <span class="text-lg">â†’</span>
                            </a>
                        </div>
                    </article>
                ))}
            </div>
        )}

    </div>
  </section>

</Layout>