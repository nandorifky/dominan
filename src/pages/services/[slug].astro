            <div class={`relative flex flex-col p-8 border-3 border-dom-black transition-all ${tier.isBest ? 'bg-dom-yellow shadow-neo -mt-4' : 'bg-white shadow-neo-sm'}`}>
              <h3 class="text-xl font-bold mb-2 uppercase">{tier.name}</h3>
              <div class="text-3xl font-bold mb-1">{tier.price}</div>
              <p class="text-xs font-bold uppercase tracking-widest opacity-60 mb-6">{tier.period}</p>
              <p class="text-sm mb-6 pb-6 border-b-2 border-black border-dashed">{tier.desc}</p>
              <ul class="space-y-3 mb-8 flex-grow">
                {tier.features.map((item) => (
                  <li class="flex items-start gap-3 text-sm font-bold">
                    <svg class="w-4 h-4 mt-1 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M20 6L9 17l-5-5"/></svg>
                    <span>{item}</span>
