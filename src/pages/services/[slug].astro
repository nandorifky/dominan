const { service } = Astro.props;
---

<Layout title={service.seoTitle}>
  <meta slot="head" name="description" content={service.seoDesc} />

  {/* === BUNGKUSAN PENYELAMAT (FIX LAYOUT COLLAPSE) === */}
  <div class="w-full flex flex-col bg-white">

    {/* ======================= HERO SECTION ======================= */}
    <header class="w-full relative bg-zinc-50 border-b-3 border-dom-black overflow-hidden">
      
      <div class="container mx-auto px-6 py-24 md:py-32 relative z-10">
        <div class="grid md:grid-cols-12 gap-12 items-center">
          
          {/* Kolom Teks */}
          <div class="md:col-span-7 w-full">
            <a href="/#services" class="inline-block font-bold text-xs md:text-sm mb-8 uppercase tracking-widest text-gray-500 hover:text-black transition-colors">
              ‚Üê Kembali ke Layanan
            </a>

            <h1 class="text-6xl md:text-7xl lg:text-8xl font-bold uppercase leading-[0.9] tracking-tighter text-dom-black mb-6">
              {service.h1}
            </h1>
            
            <div class="w-24 h-2 bg-dom-yellow mb-8"></div>

            <p class="text-2xl md:text-3xl font-bold text-gray-800 leading-tight mb-6">
              {service.subtitle}
            </p>

            <p class="text-gray-600 text-lg leading-relaxed mb-10 max-w-xl">
              {service.introText}
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
              <button onclick="document.getElementById('contactModal').classList.remove('hidden')" class="bg-dom-black text-white px-8 py-4 text-lg font-bold border-2 border-dom-black shadow-neo hover:translate-y-1 hover:shadow-none hover:bg-dom-yellow hover:text-black transition-all">
                KONSULTASI SEKARANG
              </button>
            </div>
          </div>

          {/* Kolom Gambar */}
          <div class="hidden md:block md:col-span-5 relative w-full">
             <div class="absolute -top-6 -right-6 w-24 h-24 bg-dom-yellow rounded-full blur-2xl opacity-50 pointer-events-none"></div>
             
             <div class="relative bg-white p-2 border-3 border-dom-black shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] rotate-2 hover:rotate-0 transition-transform duration-500 w-full">
                <div class="aspect-[4/5] bg-gray-200 overflow-hidden border border-black relative">
                   <img src={service.heroImage} alt={service.h1} class="w-full h-full object-cover" />
                </div>
                <div class="absolute -bottom-6 -left-6 bg-dom-black text-white px-6 py-3 border-2 border-white shadow-lg z-10">
                  <span class="font-bold uppercase tracking-widest text-sm whitespace-nowrap">Top Rated</span>
                </div>
             </div>
          </div>

        </div>
      </div>
    </header>

    {/* ======================= LOGO MARQUEE ======================= */}
    <section class="w-full border-b-3 border-dom-black bg-white py-8 overflow-hidden">
      <div class="container mx-auto px-6 mb-4">
        <p class="text-xs font-bold uppercase tracking-widest text-gray-400 text-center">Dipercaya Oleh</p>
      </div>
      <div class="flex gap-16 animate-scroll whitespace-nowrap">
        {[...service.logos, ...service.logos].map((logo) => (
          <div class="flex items-center justify-center opacity-40 hover:opacity-100 transition-opacity px-4 grayscale">
             <img src={logo} alt="Client" class="h-8 md:h-10 w-auto object-contain" />
          </div>
        ))}
      </div>
    </section>

    {/* ======================= TABLE CLIENT ======================= */}
    <section class="w-full py-24 bg-white border-b-3 border-dom-black">
      <div class="container mx-auto px-6 max-w-5xl">
        <div class="mb-12 flex items-center gap-4">
          <h2 class="text-3xl font-bold uppercase">Klien Terdaftar</h2>
          <div class="h-1 flex-grow bg-black"></div>
        </div>

        <div class="overflow-x-auto border-3 border-dom-black shadow-neo">
          <table class="w-full text-left border-collapse">
            <thead>
              <tr class="bg-dom-black text-white uppercase text-sm tracking-wider">
                <th class="p-4 md:p-6 border-r-2 border-white w-1/3">Nama Brand</th>
                <th class="p-4 md:p-6 border-r-2 border-white w-1/3">Industri</th>
                <th class="p-4 md:p-6 w-1/3 text-dom-yellow">Hasil / Status</th>
              </tr>
            </thead>
            <tbody class="font-bold text-sm md:text-base">
              {service.clientList.map((client, index) => (
                <tr class={`border-b-2 border-black hover:bg-zinc-50 transition-colors ${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}`}>
