      </div>
    </section>

    {/* ======================= CASE STUDY ======================= */}
    <section class="w-full py-24 bg-zinc-100 border-b-3 border-dom-black">
      <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold uppercase mb-12 text-center">Case Study</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {service.projects.map((item) => (
            <div class="bg-white border-3 border-dom-black shadow-neo hover:translate-y-1 hover:shadow-none transition-all duration-300 flex flex-col">
