---
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  const backlinkServices = [
    {
      slug: 'pbn',
      title: 'Private Blog Network (PBN) Premium',
      subtitle: 'Kontrol Penuh atas Ranking Anda.',
      badge: 'TOP SELLER 2026',
      seoDesc: 'Jasa PBN Authority tinggi, IP unik Class A/B/C, artikel tulisan tangan manusia. Solusi ranking cepat di era AI Overview.',
      heroImage: 'https://placehold.co/1200x600/111/FFF?text=PBN+Network+Architecture',
      
      // EDUKASI ERA AI
      aiContext: {
        title: 'Kenapa PBN Masih Raja di Era AI 2026?',
        desc: 'Algoritma Google SGE (Search Generative Experience) memprioritaskan "Information Gain". PBN kami bukan spam, tapi entitas konten independen yang menyuntikkan power ke money site Anda. Di saat backlink publik makin lemah, Private Network adalah aset tak ternilai.',
        points: ['100% Konten Unik (Anti-AI Detect)', 'IP Address Terisolasi (No Footprint)', 'Contextual Link Placement']
      },

      // SPESIFIKASI TEKNIS & PERBANDINGAN
      specs: [
        { label: 'Domain Authority (DA)', value: '25 - 60+' },
        { label: 'Spam Score', value: 'Max 1% (Clean)' },
        { label: 'Indexing Method', value: 'Premium Indexer + Social Signal' },
        { label: 'Platform', value: 'Self-Hosted WordPress (Bukan Web 2.0)' }
      ],
      comparison: {
        us: ['IP Class A/B/C Unik', 'Artikel Manual (Human)', 'Desain Web Unik Tiap Domain', 'Rutin Update Konten'],
        them: ['1 IP Shared Hosting (Bahaya)', 'Spin Content / Full AI', 'Desain Default/Mirip', 'Ditinggal setelah posting']
      },

      // CASE STUDY (Data Grafik)
      caseStudy: {
        client: 'Niche Finance (Pinjaman)',
        result: '+450% Traffic',
        chart: [20, 35, 55, 90, 100] // Representasi persentase kenaikan grafik
      },

      packages: [
        { name: 'Starter Pack', price: 'Rp 250.000', label: 'Untuk Pemula', items: ['5 PBN Posts', 'DA 20+', '500 Kata/Post', 'Report Excel'] },
        { name: 'Growth Kit', price: 'Rp 500.000', label: 'Paling Laris', isBest: true, items: ['12 PBN Posts', 'DA 30+', 'Tier 2 Support', 'Index Booster', 'Report Lengkap'] },
        { name: 'Dominator', price: 'Rp 1.000.000', label: 'Untuk Kompetisi Keras', items: ['25 PBN Posts', 'Mix IP Premium', 'Tier 2 + Tier 3', 'Social Signal', 'Garansi Index'] }
      ],

      faq: [
        { q: 'Apakah PBN ini aman dari Update Core 2026?', a: 'Sangat aman karena kami memblokir bot crawler tools (Ahrefs/Semrush/Moz) sehingga backlink tidak terdeteksi kompetitor, tapi tetap terbaca Google.' },
        { q: 'Artikelnya tulisan AI atau Manusia?', a: '100% Tulisan Manusia. Kami paham Google 2026 bisa mendeteksi konten AI spam. Kami menjaga kualitas agar link tetap powerfull.' }
      ]
    },
    {
      slug: 'media-nasional',
      title: 'Press Release Media Nasional',
      subtitle: 'Bangun Trust & Centang Biru.',
      badge: 'BRANDING AUTHORITY',
      seoDesc: 'Backlink dari Detik, Kompas, Liputan6. Tingkatkan E-E-A-T website Anda secara instan dengan rekomendasi media raksasa.',
      heroImage: 'https://placehold.co/1200x600/111/FFF?text=Media+Coverage',

      aiContext: {
        title: 'Media Nasional: Sinyal E-E-A-T Utama',
        desc: 'Google menuntut E-E-A-T (Experience, Expertise, Authoritativeness, Trust). Mendapat mention dari media Tier 1 seperti Kompas/Detik adalah cara tercepat membuktikan bahwa bisnis Anda adalah entitas nyata dan terpercaya, bukan website abal-abal.',
        points: ['Validasi Google Knowledge Panel', 'Syarat Verifikasi Centang Biru Medsos', 'Traffic Referral Nyata']
      },

      specs: [
        { label: 'Authority', value: 'DA 80 - 95' },
        { label: 'Traffic Media', value: '> 10 Juta / Bulan' },
        { label: 'Masa Tayang', value: 'Permanen (Selamanya)' },
        { label: 'Link Type', value: 'Mix Dofollow & Nofollow' }
      ],
      comparison: {
        us: ['Garansi Tayang Selamanya', 'Bisa Review Redaksi', 'Teks Soft-Selling Enak Dibaca', 'Bonus Optimasi SEO Judul'],
        them: ['Sering Dihapus setelah 1 tahun', 'Artikel Kaku / Iklan Banget', 'Tanpa Optimasi Keyword', 'Slow Response']
      },

      caseStudy: {
        client: 'Brand Skincare Lokal',
        result: 'Verified Instagram & Sales Naik',
        chart: [10, 20, 30, 80, 100] 
      },

      packages: [
        { name: 'Regional', price: 'Rp 1.500.000', label: 'Media Daerah', items: ['1 Media (Tribun Network)', 'DA 60+', 'Draft dari Kami', 'Tayang Permanen'] },
        { name: 'Nasional', price: 'Rp 3.500.000', label: 'Standard Branding', isBest: true, items: ['1 Media (Liputan6/Suara)', 'DA 80+', 'Review Redaksi', 'Dofollow Available', 'Tayang Permanen'] },
        { name: 'Premium', price: 'Rp 7.500.000', label: 'Top Tier', items: ['1 Media (Detik/Kompas)', 'DA 90+', 'High Impact', 'Masuk Google News', 'Prioritas Tayang'] }
      ],

      faq: [
        { q: 'Apakah judi/obat kuat bisa?', a: 'TIDAK BISA. Media nasional sangat ketat. Hanya menerima niche legal, bisnis real, startup, profil tokoh, dll.' },
        { q: 'Apakah link pasti Dofollow?', a: 'Tergantung kebijakan redaksi saat tayang. Namun nilai utamanya adalah "Brand Mention" yang tetap dihitung Google sebagai sinyal Trust tinggi.' }
      ]
    },
    {
      slug: 'profile',
      title: 'Backlink Profile & Social Foundation',
      subtitle: 'Fondasi Natural Website Baru.',
      badge: 'BEST FOR NEW SITE',
      seoDesc: 'Diversifikasi anchor text dengan backlink profile natural. Wajib untuk website baru sebelum masuk ke backlink berat.',
      heroImage: 'https://placehold.co/1200x600/111/FFF?text=Foundation+Links',

      aiContext: {
        title: 'Natural Link Profile di Mata AI',
        desc: 'Jika website baru tiba-tiba dapat backlink PBN tanpa fondasi, Google akan curiga (Sandbox). Backlink Profile dari situs besar (Adobe, Microsoft, Github) membuat profil backlink Anda terlihat alami dan beragam (High Diversity).',
        points: ['Diversifikasi Anchor Text', 'Meningkatkan Trust Flow (TF)', 'Aman untuk Moneysite Baru']
      },

      specs: [
        { label: 'Sumber Link', value: 'Top World Sites' },
        { label: 'Keamanan', value: '100% White Hat' },
        { label: 'Metode', value: 'Manual Registration' },
        { label: 'Login Data', value: 'Diserahkan Full' }
      ],
      comparison: {
        us: ['Registrasi Manual 1-per-1', 'Lengkap Bio & Foto', 'Drip Feed Indexing (Bertahap)', 'Akun Email Dikasih'],
        them: ['Bot Software GSA (Spam)', 'Profil Kosong', 'Langsung Blast (Bahaya)', 'Tanpa Laporan Login']
      },

      caseStudy: {
        client: 'Blog Tekno Baru',
        result: 'Lolos Sandbox & Index Cepat',
        chart: [5, 15, 25, 40, 60] 
      },

      packages: [
        { name: 'Starter', price: 'Rp 100.000', label: 'Coba Dulu', items: ['20 Profile Links', 'Mix Dofollow', 'High DA Sites', 'Report Excel'] },
        { name: 'Builder', price: 'Rp 250.000', label: 'Rekomendasi', isBest: true, items: ['50 Profile Links', 'Lengkap Bio', 'Social Signal', 'Manual Submit', 'Report Excel'] },
        { name: 'Fortress', price: 'Rp 500.000', label: 'Fondasi Kuat', items: ['100 Profile Links', 'Tier 2 Backlink', 'Premium Indexing', 'Full Login Access', 'Garansi'] }
      ],

      faq: [
        { q: 'Butuh data apa saja?', a: 'URL Website, Deskripsi Singkat, Logo (Opsional), dan Target Keyword (untuk variasi).' },
        { q: 'Berapa lama pengerjaan?', a: 'Karena ini manual, butuh waktu 3-7 hari kerja agar terlihat natural (Drip Feed) di mata Google.' }
      ]
    }
  ];

  return backlinkServices.map(service => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;

// SCHEMA MARKUP
const schemaData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://dominan.web.id/" },
        { "@type": "ListItem", "position": 2, "name": "Backlink Services", "item": "https://dominan.web.id/services/backlink/" },
        { "@type": "ListItem", "position": 3, "name": service.title, "item": Astro.url.href }
      ]
    },
    {
      "@type": "Service",
      "name": service.title,
      "description": service.seoDesc,
      "provider": { "@type": "Organization", "name": "Dominan Web" },
      "offers": {
        "@type": "AggregateOffer",
        "lowPrice": service.packages[0].price.replace(/[^0-9]/g, ''),
        "priceCurrency": "IDR",
        "offerCount": service.packages.length
      }
    }
  ]
};
---

<Layout 
  title={`${service.title} | Dominan 2026`}
  description={service.seoDesc}
  image={service.heroImage}
>
    <script type="application/ld+json" slot="head" set:html={JSON.stringify(schemaData)} />

    {/* =========================================
        1. HERO SECTION (NEO-BRUTALISM)
       ========================================= */}
    <header class="relative bg-zinc-50 border-b-3 border-dom-black overflow-hidden pt-12 pb-24 md:pt-24 md:pb-32">
        {/* Background Grid Pattern */}
        <div class="absolute inset-0 z-0 opacity-10 pointer-events-none" style="background-image: linear-gradient(#000 1px, transparent 1px), linear-gradient(90deg, #000 1px, transparent 1px); background-size: 40px 40px;"></div>
        
        <div class="container mx-auto px-6 relative z-10">
            <div class="flex flex-col md:flex-row items-center gap-12">
                <div class="w-full md:w-3/5 space-y-6">
                    <div class="inline-flex items-center gap-2 bg-dom-black text-white px-3 py-1 text-xs font-bold uppercase tracking-widest border-2 border-transparent shadow-[4px_4px_0px_0px_#FFC900]">
                        <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                        {service.badge}
                    </div>
                    
                    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold uppercase leading-[0.9] text-dom-black tracking-tighter">
                        {service.title}
                    </h1>
                    
                    <p class="text-xl md:text-2xl font-bold text-gray-500 border-l-4 border-dom-yellow pl-4 italic">
                        "{service.subtitle}"
                    </p>
                    
                    <p class="text-gray-700 text-lg leading-relaxed max-w-xl">
                        {service.seoDesc}
                    </p>

                    <div class="flex flex-col sm:flex-row gap-4 pt-4">
                        <button onclick="document.getElementById('pricing').scrollIntoView({behavior: 'smooth'})" class="bg-dom-yellow text-black px-8 py-4 text-lg font-bold border-2 border-black shadow-neo hover:shadow-none hover:translate-y-1 transition-all">
                            LIHAT HARGA PAKET
                        </button>
                        <a href="#details" class="flex items-center justify-center px-8 py-4 font-bold border-2 border-black bg-white hover:bg-gray-100 transition-colors">
                            Pelajari Spesifikasi ↓
                        </a>
                    </div>
                </div>

                <div class="w-full md:w-2/5 relative">
                     <div class="bg-white border-3 border-dom-black p-2 shadow-[8px_8px_0px_0px_#000] rotate-2 hover:rotate-0 transition-all duration-500">
                        <img src={service.heroImage} alt={service.title} class="w-full h-auto border border-black grayscale hover:grayscale-0 transition-all duration-500" />
                     </div>
                     {/* Floating Badge */}
                     <div class="absolute -bottom-6 -left-6 bg-dom-black text-white p-4 border-2 border-white shadow-lg max-w-[150px] text-center">
                        <div class="text-3xl font-bold text-dom-yellow">2026</div>
                        <div class="text-xs font-bold uppercase tracking-widest">SEO Strategy Ready</div>
                     </div>
                </div>
            </div>
        </div>
    </header>

    {/* =========================================
        2. EDUKASI: ERA AI & 2026 (Why Backlink?)
       ========================================= */}
    <section id="details" class="py-20 bg-dom-black text-white border-b-3 border-dom-black">
        <div class="container mx-auto px-6">
            <div class="grid md:grid-cols-2 gap-16 items-center">
                <div class="order-2 md:order-1 relative">
                    {/* Visualisasi AI/Bot */}
                    <div class="border-2 border-white p-6 bg-zinc-900 relative z-10">
                        <div class="flex gap-2 mb-4 border-b border-gray-700 pb-4">
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                            <div class="w-3 h-3 rounded-full bg-green-500"></div>
                        </div>
                        <div class="space-y-3 font-mono text-sm text-green-400">
                            <p>> Google Core Update 2026 detected...</p>
                            <p>> Analyzing Domain Authority...</p>
                            <p>> <span class="text-white">Checking Backlink Profile:</span> <span class="text-dom-yellow font-bold">HIGH QUALITY DETECTED</span></p>
                            <p>> Result: Ranking Boost Approved.</p>
                        </div>
                    </div>
                    <div class="absolute top-4 left-4 w-full h-full border-2 border-gray-700 -z-0"></div>
                </div>

                <div class="order-1 md:order-2">
                    <h2 class="text-3xl md:text-5xl font-bold uppercase mb-6 leading-tight">
                        <span class="text-dom-yellow">{service.aiContext.title}</span>
                    </h2>
                    <p class="text-gray-300 text-lg mb-8 leading-relaxed">
                        {service.aiContext.desc}
                    </p>
                    <ul class="space-y-4">
                        {service.aiContext.points.map(point => (
                            <li class="flex items-center gap-4 bg-zinc-900 border border-zinc-700 p-3 hover:border-dom-yellow transition-colors">
                                <span class="text-dom-yellow text-xl">✓</span>
                                <span class="font-bold tracking-wide">{point}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        </div>
    </section>

    {/* =========================================
        3. SPESIFIKASI & KOMPARASI (The Brutal Truth)
       ========================================= */}
    <section class="py-20 bg-zinc-50 border-b-3 border-dom-black">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold uppercase mb-4">Spesifikasi & Kualitas</h2>
                <div class="w-24 h-2 bg-black mx-auto"></div>
            </div>

            <div class="grid md:grid-cols-12 gap-8">
                {/* Tabel Spesifikasi */}
                <div class="md:col-span-4 space-y-6">
                    <div class="bg-white border-3 border-dom-black p-6 shadow-neo">
                        <h3 class="text-xl font-bold uppercase mb-6 border-b-2 border-dashed border-black pb-2">Technical Specs</h3>
                        <dl class="space-y-4">
                            {service.specs.map(spec => (
                                <div class="flex justify-between items-center text-sm">
                                    <dt class="text-gray-500 font-bold">{spec.label}</dt>
                                    <dd class="font-bold bg-gray-100 px-2 py-1">{spec.value}</dd>
                                </div>
                            ))}
                        </dl>
                    </div>
                    {/* Trust Box */}
                    <div class="bg-dom-yellow border-3 border-dom-black p-6 text-center">
                        <p class="font-bold text-sm uppercase tracking-widest mb-1">Garansi Link</p>
                        <h3 class="text-3xl font-bold">PERMANEN</h3>
                        <p class="text-xs mt-2">*Kecuali terjadi force majeure pada server</p>
                    </div>
                </div>

                {/* Tabel Komparasi (Us vs Them) */}
                <div class="md:col-span-8">
                    <div class="border-3 border-dom-black bg-white shadow-neo overflow-hidden">
                        <div class="grid grid-cols-2 text-center font-bold uppercase text-white">
                            <div class="bg-dom-black py-4 border-r border-gray-700 flex items-center justify-center gap-2">
                                <span class="text-dom-yellow">★</span> Dominan Web
                            </div>
                            <div class="bg-gray-400 py-4">Lapak Sebelah</div>
                        </div>
                        <div class="grid grid-cols-2">
                            <div class="border-r-2 border-black">
                                {service.comparison.us.map(item => (
                                    <div class="p-4 border-b border-gray-100 flex items-center gap-3 bg-green-50">
                                        <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path></svg>
                                        <span class="font-bold text-sm md:text-base">{item}</span>
                                    </div>
                                ))}
                            </div>
                            <div>
                                {service.comparison.them.map(item => (
                                    <div class="p-4 border-b border-gray-100 flex items-center gap-3 text-gray-500 opacity-70">
                                        <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"></path></svg>
                                        <span class="font-medium text-sm md:text-base line-through">{item}</span>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {/* =========================================
        4. EXPERIENCE & CASE STUDY (Graph)
       ========================================= */}
    <section class="py-20 bg-white border-b-3 border-dom-black">
        <div class="container mx-auto px-6 max-w-5xl">
            <div class="flex flex-col md:flex-row gap-12 items-end">
                <div class="w-full md:w-1/2">
                    <h2 class="text-4xl font-bold uppercase mb-6 leading-none">
                        Bukti Nyata.<br>
                        Bukan Teori.
                    </h2>
                    <div class="bg-gray-100 p-6 border-l-4 border-dom-black mb-6">
                        <p class="font-bold text-gray-500 text-xs uppercase mb-2">Studi Kasus Klien:</p>
                        <h3 class="text-2xl font-bold mb-2">{service.caseStudy.client}</h3>
                        <p class="text-green-600 font-bold text-xl">{service.caseStudy.result}</p>
                    </div>
                    <p class="text-gray-600">
                        Kami tidak hanya menjual link. Kami menjual kenaikan peringkat. Grafik di samping adalah data riil GSC (Google Search Console) klien setelah 3 bulan pemasangan backlink bertahap.
                    </p>
                </div>

                <div class="w-full md:w-1/2">
                    <div class="bg-white border-3 border-dom-black p-6 shadow-neo relative">
                        <p class="absolute top-4 right-4 text-xs font-bold bg-gray-200 px-2 py-1">Traffic Growth</p>
                        {/* CSS Bar Chart */}
                        <div class="flex items-end justify-between h-48 gap-2 pt-8">
                             {service.caseStudy.chart.map((height, idx) => (
                                <div class="w-full bg-gray-100 relative group">
                                    <div 
                                        style={`height: ${height}%`} 
                                        class={`w-full absolute bottom-0 left-0 transition-all duration-1000 ${idx === 4 ? 'bg-dom-black' : 'bg-gray-400'}`}
                                    ></div>
                                    <div class="absolute -top-8 left-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100 font-bold text-xs bg-black text-white px-1 transition-opacity">
                                        {height}%
                                    </div>
                                </div>
                             ))}
                        </div>
                        <div class="flex justify-between text-xs font-bold text-gray-400 mt-2 uppercase">
                            <span>Bulan 1</span>
                            <span>Bulan 3</span>
                            <span>Bulan 6</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {/* =========================================
        5. TESTIMONIALS (Social Proof)
       ========================================= */}
    <section class="py-20 bg-dom-yellow border-b-3 border-dom-black overflow-hidden relative">
        <div class="container mx-auto px-6 relative z-10 text-center">
            <h2 class="text-3xl font-bold uppercase mb-12 border-2 border-black inline-block px-4 py-2 bg-white transform -rotate-2">
                Apa Kata Mereka?
            </h2>
            <div class="grid md:grid-cols-3 gap-6">
                {[1, 2, 3].map((i) => (
                    <div class="bg-white border-3 border-dom-black p-8 text-left shadow-neo hover:-translate-y-1 transition-transform">
                        <div class="flex gap-1 text-dom-yellow mb-4">
                            {'★★★★★'.split('').map(star => <span class="text-xl">{star}</span>)}
                        </div>
                        <p class="text-gray-800 font-medium mb-6 leading-relaxed">"Awalnya ragu karena banyak jasa abal-abal. Tapi Dominan beda. Reportnya rapi, linknya nancep, traffic naik beneran."</p>
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 bg-gray-300 rounded-full border-2 border-black"></div>
                            <div>
                                <div class="font-bold text-sm uppercase">Client #{i*24}</div>
                                <div class="text-xs text-gray-500 font-bold">CEO UMKM</div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    {/* =========================================
        6. PRICING & PACKAGES (The Offer)
       ========================================= */}
    <section id="pricing" class="py-24 bg-zinc-50 border-b-3 border-dom-black">
        <div class="container mx-auto px-6">
            <h2 class="text-4xl md:text-6xl font-bold uppercase mb-16 text-center tracking-tighter">
                Investasi <span class="text-transparent bg-clip-text bg-gradient-to-r from-dom-black to-gray-500">Ranking</span>
            </h2>

            <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto items-start">
                {service.packages.map((pkg, idx) => (
                    <div class={`relative flex flex-col border-3 border-dom-black p-8 transition-transform duration-300 ${pkg.isBest ? 'bg-dom-black text-white shadow-[10px_10px_0px_0px_#FFC900] scale-105 z-10' : 'bg-white text-black shadow-neo hover:shadow-none hover:translate-y-1'}`}>
                        {pkg.isBest && (
                            <div class="absolute top-0 right-0 bg-dom-yellow text-black text-xs font-bold px-3 py-1 uppercase tracking-widest transform translate-x-2 -translate-y-2 border-2 border-black">
                                Best Value
                            </div>
                        )}
                        <div class="mb-4">
                            <span class="text-xs font-bold uppercase tracking-widest opacity-60">{pkg.label}</span>
                            <h3 class="text-2xl font-bold uppercase mt-1">{pkg.name}</h3>
                        </div>
                        <div class="text-4xl font-bold mb-8">{pkg.price}</div>
                        
                        <ul class="space-y-4 mb-8 flex-grow">
                            {pkg.items.map(item => (
                                <li class="flex items-start gap-3 text-sm font-bold">
                                    <svg class={`w-5 h-5 flex-shrink-0 ${pkg.isBest ? 'text-dom-yellow' : 'text-black'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path></svg>
                                    <span>{item}</span>
                                </li>
                            ))}
                        </ul>

                        <button onclick="document.getElementById('contactModal').classList.remove('hidden')" class={`w-full py-4 font-bold border-2 transition-colors uppercase tracking-widest ${pkg.isBest ? 'bg-dom-yellow text-black border-dom-yellow hover:bg-white hover:border-white' : 'bg-black text-white border-black hover:bg-white hover:text-black'}`}>
                            Pesan Sekarang
                        </button>
                    </div>
                ))}
            </div>
        </div>
    </section>

    {/* =========================================
        7. FAQ (People Also Ask Optimization)
       ========================================= */}
