import '../styles/global.css';
import '@fontsource/space-grotesk';

interface Props {
	title: string;
	description?: string; // [BARU] Menambahkan properti description opsional
    image?: string;       // [BONUS] Menambahkan properti image untuk OG Image dinamis
}

const { title, description, image } = Astro.props;

// Konfigurasi Default (Fallback jika halaman tidak mengirim data)
const defaultDesc = "Dominan Web - Jasa Pembuatan Website & SEO High Performance. Fokus pada kecepatan (Speed), keamanan, dan konversi penjualan.";
const defaultImage = "/og-default.jpg"; // Pastikan Anda punya file ini di folder /public

// Logic Penentuan Nilai Akhir
const finalDesc = description || defaultDesc;
const finalImage = image || defaultImage;
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://dominan.web.id'); // Otomatis generate canonical

// Struktur Menu
const menuItems = [
    { label: 'Home', href: '/' },
    { 
        label: 'Profil', 
        href: '#',
        children: [
            { label: 'Tentang Kami', href: '/about' },
            { label: 'Alur Kerja', href: '/process' },
            { label: 'Portfolio', href: '/portfolio' },
            { label: 'Alur Pemesanan', href: '/how-to-order' }
        ]
    },
    { 
        label: 'Layanan', 
        href: '/#services',
        children: [
            { label: 'Jasa SEO Garansi', href: '/services/seo' },
            { label: 'Jasa Google Ads', href: '/services/ads' },
            { label: 'Jasa Pembuatan Website', href: '/services/website' },
			{ label: 'Jasa Optimasi Google Maps', href: '/services/google-maps' }
        ]
    },
    { label: 'Blog', href: '/blog' }
];
